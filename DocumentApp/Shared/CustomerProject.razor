@inject DocumentApp.Defaults.DefaultDocument defDoc
@using DocumentApp.Data
@using DocumentApp.Services
@using Microsoft.AspNetCore.Mvc
@inject FileSystemService fileSysServ
@inject DocumentApp.Services.MongoDBConnection mongoConnection
@inject DocumentApp.Services.ProjectService projectService
@inject IJSRuntime JS
@inject UserService userService
@inject NavigationManager nManager

    <table class="table">
        <thead>
            <tr>
                <th>Doc name</th>
                <th>File name</th>
                <th>Requirement</th>
                <th>Approvement</th>
                <th>Download</th>
            </tr>
        </thead>
        <tbody>
        @foreach (var doc in fileSysServ.currentProject.Documents)
        {
                <tr>
                    <td>@doc.Name</td>
                    <td>@doc.FileName</td>
                    <td><input type="checkbox" @bind="doc.IsRequired" /></td>
                    <td><input type="checkbox" @bind="doc.IsApproved" /></td>
                    <td><a class="form-control" href="documents/@doc.FileName" download="@doc.FileName">Download</a></td>
                </tr>
        }
        </tbody>
    </table>

    <hr />
    <table class="table">
        <thead>
            <tr>
                <th>Doc name</th>
                <th>File name</th>
                <th>Requirement</th>
                <th>Approvement</th>
                <th>Download</th>
            </tr>
        </thead>
        <tbody>
        @foreach (var doc in fileSysServ.currentProject.ProjecterDocuments)
        {
            <tr>
                <td>@doc.Name</td>
                <td>@doc.FileName</td>
                <td><input type="checkbox" @bind="doc.IsRequired" /></td>
                <td><input type="checkbox" @bind="doc.IsApproved" /></td>
                <td><a class="form-control" href="documents/@doc.FileName" download="@doc.FileName">Download</a></td>
            </tr>
        }
        </tbody>
    </table>

    <table class="table">
        <thead>
            <tr>
                <th>Name of field</th>
                <th>Value</th>
            </tr>
        </thead>
        <tbody>
        @foreach (var field in fileSysServ.currentProject.Form.FormFields)
        {
            if (field.FieldName == "Технико-экономические показатели (ТЭП)" ||
                field.FieldName == "Вводной газопровод низкого давления")
            {
                <tr>
                    <td colspan="2" align="center"><strong>@field.FieldName</strong></td>
                </tr>
            }
            <tr>
                <td>@field.FieldName</td>
                <td><input disabled @bind="field.FieldValue"/></td>
            </tr>
        }
        </tbody>
    </table>
<br />
<button @onclick="CloseComp" class="btn btn-primary mb-3" type="submit">Save changes</button>





@code {
    [Parameter]
    public string? department { get; set; }

    List<FormField> testFields;

    string selectedProjecter;
    string selectedDeveloper;
    string projectName;

    protected override void OnInitialized()
    {
        base.OnInitialized();
        testFields = new();
    }

    public void CloseComp()
    {
        projectService.UpdateProjectInDataBase(fileSysServ.currentProject);
        nManager.NavigateTo("/projectsPage");
    }
}
